<%- include('layouts/header') %>

    <div class="container">
        <h1 style="text-align: center">Document Update</h1>
        <form action="/update" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Image Title</label>
                        <input type="text" name="title" id="title" class="form-control" value="<%= allData.title %>">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Image Description</label>
                        <input type="text" name="description" id="description" class="form-control" value="<%= allData.description %>">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Artist Name</label>
                        <input type="text" name="name" id="name" class="form-control" value="<%= allData.name %>">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Artist Email</label>
                        <input type="text" name="email" id="email" class="form-control" value="<%= allData.email %>">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Artist Contact Number</label>
                        <input type="text" name="number" id="number" class="form-control" value="<%= allData.number %>">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Image Price</label>
                        <input type="text" name="price" id="price" class="form-control" value="<%= allData.price %>">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Image Tags</label>
                        <input type="text" name="tags" id="tags" class="form-control" value="<%= allData.tags %>">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Date of Publish</label>
                        <input type="date" name="date" id="date" class="form-control">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>File</label>
                        <input type="file" name="image" id="image">
                    </div>
                </div>
            </div>
            <input type="hidden" name="id" value="<%= allData._id %>">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
        </form>
    </div>

<%- include('layouts/footer') %>
